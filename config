# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status #status_command "~/.i3/status.sh"
    mode hide       #<dock|hide>
    #modifier $mod   #Mod1-Mod5, Shift, Control
    position bottom #<top|bottom>

    colors {
        #background $c_bg1
        #statusline #ff0000
        #separator  #666666
        focused_workspace  $col_bo1 $col_ba1 $col_t1
        active_workspace   $col_bo2 $col_ba2 $col_t2
        inactive_workspace $col_bo3 $col_ba3 $col_t3
        urgent_workspace   $col_bo4 $col_ba4 $col_t4
    }
}

